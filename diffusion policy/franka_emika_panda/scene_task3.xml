<mujoco model="integrated_scene">
  <!-- 编译与模拟选项 -->
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 -9.81"/>

  <!-- 引入 Panda 模型 -->
  <include file="panda.xml"/>

  <!-- 文件一的统计与可视化设置 -->
  <statistic center="0.3 0 0.4" extent="1"/>
  <visual>
    <headlight diffuse="0.4 0.4 0.4" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <!-- 文件一的资产定义 -->
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge"
             rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8"
             width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true"
              texrepeat="5 5" reflectance="0.0"/>
  </asset>

  <worldbody>
    <!-- 摄像机配置（文件一） -->
    <camera name="diagonal_view" pos="1.2 0 0.9" euler="0 0.785398 1.57"/>
    <camera name="top" pos="0 0 3" xyaxes="1 0 0 0 1 0"/>
    <camera name="left_side" pos="0.3 -1.5 0.4" xyaxes="1 0 0 0 0 1"/>
    <camera name="front" pos="2 0 0.2" xyaxes="0 1 0 0 0 1"/>


    <body name="red_box" pos="0.6 0.3 0.06">
      <joint type="free" frictionloss="0.01"/>
      <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002"/>
      <geom pos="0 0 0" size="0.02 0.02 0.02" type="box" rgba="0 0 1 1"/>
    </body>


    <!-- 文件一中的地面 -->
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- 文件二中的柜体环境（尺寸缩放为原来的 0.1 倍、交换长宽，并整体放大1.5倍） -->
    <body name="closet" pos="0.9 0.05 0" euler="0 0 -3.1415926">
      <!-- 柜体底板 -->
      <joint type="free" frictionloss="5"/>
      <geom name="closet_bottom" type="box"
            pos="0 0 0.0075" size="0.075 0.15 0.0075"
            rgba="0.7 0.4 0.4 1"/>
      <!-- 柜体顶板 -->
      <geom name="closet_top" type="box"
            pos="0 0 0.2925" size="0.075 0.15 0.0075"
            rgba="0.7 0.4 0.4 0.2"/>
      <!-- 左侧壁 -->
      <geom name="closet_left_wall" type="box"
            pos="-0.075 0 0.15" size="0.0075 0.15 0.15"
            rgba="0.7 0.4 0.4 1"/>
      <!-- 后侧壁 -->
      <geom name="closet_back_wall" type="box"
            pos="0 -0.15 0.15" size="0.075 0.0075 0.15"
            rgba="0.7 0.4 0.4 1"/>
      <!-- 前侧壁（如需开口可删除此部分） -->
      <geom name="closet_front_wall" type="box"
            pos="0 0.15 0.15" size="0.075 0.0075 0.15"
            rgba="0.7 0.4 0.4 1"/>
      
      <!-- 滑动门（柜体右侧） -->
      <body name="sliding_door" pos="0.105 0 0.15">
        <joint name="door_slide" type="slide"
               axis="0 1 0" limited="true"
               range="0 0.3"
               damping="50" frictionloss="1"/>
        <geom name="door" type="box" pos="0 0 0"
              size="0.0075 0.15 0.15" rgba="0.6 0.3 0.3 0.5"/>
        <geom name="handle" type="box" pos="0.03 0.1 0"
              size="0.06 0.01 0.01" rgba="0.2 0.0 0.0 1"/>
      </body>
    </body>
  </worldbody>

</mujoco>
