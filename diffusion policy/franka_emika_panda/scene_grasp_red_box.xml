<mujoco model="panda scene">
  <include file="panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.4 0.4 0.4" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.0"/>
  </asset>


  <worldbody>
    <camera name="diagonal_view" pos="1.2 0 0.9" euler="0 0.785398 1.57"/>
    <camera name="top" pos="0 0 3" xyaxes="1 0 0 0 1 0" />
    <camera name="left_side" pos="0.3 -1.5 0.4" xyaxes="1 0 0 0 0 1" />
    <camera name="front" pos="2 0 0.2" xyaxes="0 1 0 0 0 1" />

    <body name="red_box_bottom" pos="0.6 0.3 0.06">
        <joint type="free" frictionloss="0.01" />
        <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002" />
        <!--geom pos="0 0 0" size="0.05 0.05 0.06" type="box" rgba="0. 0.5 0. 1" /-->
        <geom pos="-0.045 0 0" size="0.005 0.05 0.06" type="box" rgba="0. 0.5 0. 1" />
        <geom pos="0.045 0 0" size="0.005 0.05 0.06" type="box" rgba="0. 0.5 0. 1" />
        <geom pos="0 -0.045 0" size="0.05 0.005 0.06" type="box" rgba="0. 0.5 0. 1" />
        <geom pos="0 0.045 0" size="0.05 0.005 0.06" type="box" rgba="0. 0.5 0. 1" />
    </body>

    <body name="red_box" pos="0.6 0.3 0.06">
        <joint type="free" frictionloss="0.01" />
        <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002" />
        <geom pos="0 0 0" size="0.02 0.02 0.02" type="box" name="box" rgba="0.9 0. 0. 1" />
        <geom pos="0 0 -0.01" size="0.06 0.06 0.005" type="box" rgba="0.2 0. 0. 1" />
    </body>

    <body name="blue_box" pos="0.6 0.3 0.06">
        <joint type="free" frictionloss="0.01" />
        <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002" />
        <geom pos="0 0 0" size="0.02 0.02 0.02" type="box" rgba="0. 0. 0.9 1" />
    </body>


    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <!--geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/-->
  </worldbody>
</mujoco>
